<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4ED4DE"
        />
    <TextView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:text="Lớp Học"
        android:textColor="#FFF"
        android:textSize="44sp" />

    <TextView
        android:id="@+id/ivSubtitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Hãy tham gia ngay vào lớp học của bạn "
        android:textColor="#FFF"
        android:textSize="22sp"
        android:layout_below="@id/ivLogo"
        />
    <LinearLayout
        android:id="@+id/ivBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginStart="36dp"
        android:paddingLeft="-36dp"
        android:layout_marginTop="280sp"
        android:layout_below="@id/ivSubtitle"
        >
        <TextView
            android:id="@+id/ivBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:layout_marginStart="36dp"
            android:text="Tham gia ngay"
            android:textColor="#FFF"
            android:textSize="24sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            />
    </LinearLayout>
</RelativeLayout>