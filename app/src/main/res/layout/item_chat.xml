<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/msgLeft"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble_enemy"
    android:text="Hi everybody"
    android:textSize="20sp"
        android:textColor="#FFF"
    android:layout_margin="8dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp"
    android:fontFamily="monospace"
    android:layout_alignParentStart="true"
    />
    <TextView
        android:id="@+id/msgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_me"
        android:text="Hi everybody"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:layout_margin="8dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:fontFamily="monospace"
        android:layout_alignParentEnd="true"
        />
    <LinearLayout
        android:id="@+id/bgEnemy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="50dp" android:visibility="gone">
        <TextView
            android:id="@+id/nameEnemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi everybody"
            android:textSize="13sp"
            android:textColor="#AAAAAA"
            android:fontFamily="monospace"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="8dp"
            />
    </LinearLayout>
</RelativeLayout>